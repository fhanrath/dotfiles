alias vim=nvim
alias vi=nvim
# alias vf='nvim $(fzf)'

# screenshot/screencasting
alias screens=grim -g "$(slurp)"
alias cscreens=grim -g "$(slurp)" - | wl-copy
alias screenc=wf-recorder -g "$(slurp)"

# git
alias gtree="git log --graph --pretty=oneline --abbrev-commit --all"
alias gtreec="git log --graph --pretty=oneline --abbrev-commit"

if [ "$(command -v exa)" ]; then
    unalias -m 'll'
    unalias -m 'l'
    unalias -m 'la'
    unalias -m 'ls'
    alias ls='exa -G --color auto --icons -a -s type'
    alias ll='exa -l --color always --icons -a -s type'
    alias lt='exa --tree --level=2 --color always --icons' 
fi

if [ "$(command -v bat)" ]; then
  unalias -m 'cat'
  alias cat='bat -pp'
fi